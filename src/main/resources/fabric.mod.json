{
  "schemaVersion": 1,
  "id": "quilloforigin",
  "version": "${version}",

  "name": "Quill of Origin",
  "description": "A mod that adds an Origins power to log the chat into books",
  "authors": [
    "Alluysl"
  ],
  "contact": {
    "homepage": "https://github.com/Alluysl/quill-of-origin",
    "sources": "https://github.com/Alluysl/quill-of-origin",
    "issues": "https://github.com/Alluysl/quill-of-origin/issues"
  },

  "license": "MIT",
  "icon": "assets/quilloforigin/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "alluysl.quilloforigin.QuillOfOrigin"
    ]
  },
  "mixins": [
    "quilloforigin.mixins.json"
  ],
  "accessWidener": "quilloforigin.accesswidener",

  "depends": {
    "java": ">=16",
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.17.x",
    "origins": ">=1.0.0"
  },
  "suggests": {
    "another-mod": "*"
  }
}
